export const <?php echo $apiFileName;?>Api = {
    <?php
        foreach ($list as $key => $value) {

            if (isset($value['content']) && $value['content']) {

    echo "//{$value['title']}
    {$value['content']}
    ";

            } else {

    echo "// {$value['title']}
    {$value['functoin_name']}: (params = {}) => {
        return api.{$value['method']}('{$value['url']}',params);
    },
    ";

            }
        }    
    ?>
    
